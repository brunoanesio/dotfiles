# Arch
alias upgrade='paru'
alias info='pacman -Qi '
alias aur='pacman -Qm'
alias pacins='doas pacman -S '
alias pacrem='doas pacman -R '
alias pacsea='pacman -Ss '

# ls
alias ls='ls --color=auto'
alias la='ls -a'
alias ll='ls -lah'

# exa
alias exa='exa --icons -sname'
alias ex='exa -a'
alias exx='exa -la'
alias exg='exa -la --git'

# Git
alias gs='git status'
alias gc='git commit -S -m '
alias gp='git push'
alias gpo='git push origin'
alias gco='git checkout '
alias gb='git branch '
alias gpl='git pull'
alias gplo='git pull origin'

# System
alias reboot='systemctl reboot'
alias shutdown='shutdown -h now'

# grep
alias grep='grep -i --color=auto'

# nvim
alias v='nvim'

# cd
alias ..='cd ..'

# doas
alias sudo='doas'
