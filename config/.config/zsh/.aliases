# Arch
alias upgrade='paru -Syu'
alias info='pacman -Qi '
alias aur='pacman -Qm'
alias pacins='sudo pacman -S '
alias pacrem='sudo pacman -R '
alias pacsea='pacman -Ss '

# ls
alias ls='ls --color=auto'
alias la='ls -a'
alias ll='ls -lah'

# exa
alias exa='exa --icons -sname'
alias ex='exa -a'
alias exx='exa -la'
alias exg='exa -la --git'

# Git
alias gs='git status'
alias gc='git commit -S -m '
alias gp='git push'
alias gpo='git push origin'
alias gco='git checkout '
alias gb='git branch '
alias gpl='git pull'
alias gplo='git pull origin'
alias gr='git revert -S '
alias gf='git fetch'
alias gfp='git fetch && git pull'

# System
alias reboot='systemctl reboot'
alias shutdown='shutdown -h now'

# grep, rg
alias grep='grep -i --color=auto'
alias rg='rg -i'

# nvim
alias v='nvim'

# emacs
alias emacs='emacsclient -c -a 'emacs''

# cd
alias ..='cd ..'

# wget
alias wget='wget --hsts-file=$XDG_DATA_HOME/wget-hsts '

# rm
# alias rm='rm -I '

# lazygit
alias lg='lazygit'

# helix
alias hx='helix'

# nnn
alias n='nnn'
