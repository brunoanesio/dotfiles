configuration {
	modi: "run,drun,window";
	font: "Iosevka Mayukai Codepro Medium 14";
	show-icons: true; 
	terminal: "kitty";
	icon-theme: "Papirus";
	drun-display-format: "{icon} {name}";
    location: 0;
    hide-scrollbar: true;
    disable-history: false;
	display-window: "﩯 Janelas";
	display-drun: " Aplicativos";
    display-run: "  Run";
	display-calc: " Calculadora";
	display-emoji: " Emojis";
    sidebar-mode: true;
  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}
@theme "catppuccin-mocha"
