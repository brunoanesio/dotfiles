# ls
alias ls='ls --color=auto'
alias la='ls -a'
alias ll='ls -lah'

# exa
alias exa='eza --icons --group-directories-first'
alias ex='exa -a'
alias exx='exa -la'
alias exg='exa -la --git'
alias tree="exa --tree --level=2"

# Misc
alias grep='grep -i --color=auto'
alias rg='rg -i'
alias v='nvim'
alias nv='neovide'
alias nvchad='NVIM_APPNAME=nvchad nvim'
alias vc='NVIM_APPNAME=nvchad nvim'
# alias mvim='NVIM_APPNAME=minimal-nvim nvim'
alias emacs='emacsclient -c -a 'emacs''
# alias rm='rm -I '
alias lg='lazygit'
alias hx='helix'
alias n='nnn'
alias yarn='yarn --use-yarnrc $XDG_CONFIG_HOME/yarn/config'
alias kitten='kitty +kitten '
alias dusize='du -hd 1 | sort -hr'
alias duten='du -hd 1 | sort -hr | tail -n +2 | head'
alias code='codium'
